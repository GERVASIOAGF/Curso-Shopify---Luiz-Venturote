

// Fonts
//---------------------------------------------- 
@font-face {
    font-family: 'Source Sans Pro';
    src: url('{{"SourceSansPro-Regular.eot" | asset_url}}');
    src: url('{{"SourceSansPro-Regular.eot?#iefix" | asset_url}}') format('embedded-opentype'),
        url('{{"SourceSansPro-Regular.woff2" | asset_url}}') format('woff2'),
        url('{{ "SourceSansPro-Regular.woff" | asset_url}}') format('woff'),
        url('{{ "SourceSansPro-Regular.ttf" | asset_url}}') format('truetype'),
        url('{{ "SourceSansPro-Regular.svg#SourceSansPro-Regular" | asset_url}}') format('svg');
    font-weight: normal;
    font-style: normal;
    font-display: swap;
}

// Headings
//---------------------------------------------- 

h1, h2, h3, h4, h5, h6 {
    font-family: Source Sans Pro;
    font-style: normal;
    font-weight: bold;
    marign: 0 0 16px 0;
    padding: 0;
}

h1 {
    font-size: 32px;
    line-height: 40px;
}

h2 {
    font-size: 24px;
    line-height: 32px;
}

h3 {
    font-size: 16px;
    line-height: 24px;
}

h4, h5, h6 {
    font-size: 16px;
    line-height: 16px;;
}

.h1-Sans-Pro,
.h2-Sans-Pro,
.h3-Sans-Pro,
.h4-Sans-Pro,
.h5-Sans-Pro,
.h6-Sans-Pro {
    font-family: 'Source Sans Pro';
    font-weight: normal;
}
